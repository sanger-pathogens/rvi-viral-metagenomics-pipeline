{ 
    "pipeline": "PaM Info RVI viral metagenomics pipeline",
    "params": {
        "Logging options": {
            "monochrome_logs": {
                "default": "false",
                "help_text": "Should logs appear in plain ASCII"
            }
        }
    },
    "Kraken2/Bracken options": {
        "kraken2bracken_kraken2_db": {
            "default": "/data/pam/software/kraken2/viral_kraken/"
        }
    },
    "Pre-processing options": {
        "sequencer_source": {
            "default": "NexteraPE"
        },
        "trimmomatic_options": {
            "default": "ILLUMINACLIP:/data/pam/software/trimmomatic/adapter_fasta/solexa-with-nextseqPR-adapters.fasta:2:10:7:1 CROP:151 SLIDINGWINDOW:4:20 MINLEN:100"
        },
        "trimmomatic_threads": {
            "default": 4
        },
        "human_read_removal": {
            "default": "true",
            "help_text": "enables the human-read removal functionality using Kneaddata software; Trimmomatic trimming will then take place as part of the Kneaddata process"
        },
        "off_target_db": {
            "default": "/data/pam/software/RVI_DB/homo_sapiens",
            "help_text": "off-target genome database for contamination read removal; defaults to the human genome"
        },
        "kneaddata_threads": {
            "default": 4
        }
    },
    "overwrite_param": {
        "cleanup_intermediate_files_irods_extractor": {
            "default": "true",
            "help_text": "delete intermediate CRAM files downloaded from IRODS in work/ folder"
        },
        "preexisting_fastq_tag": {
            "default": "trimmed_reads",
            "help_text": "if the expected ouput fastq files exist in the folder named like this under the result folder for the sample e.g. in results/12345_1#67/trimmed_reads/12345_1#67_1.fastq.gz,\n            then skip download and any further processing for this sample. Default value 'trimmed_reads' means the run skips items for which the output tof the PREPROCESSING subworkflow already exists."
        },
        "split_sep_for_ID_from_fastq":{
            "default": "_1_kneaddata_paired_1.fastq",
            "help_text": "separator to recognise sample ID from preexisting file."
        }
    }
}


